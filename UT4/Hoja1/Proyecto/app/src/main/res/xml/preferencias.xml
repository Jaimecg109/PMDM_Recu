<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Datos_Personales">

        <EditTextPreference
            app:key="Nombre"
            app:title="Nombre"
            app:useSimpleSummaryProvider="true" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="MayorEdad"
            android:title="@string/Mayor_edad" />


    </PreferenceCategory>

    <PreferenceCategory app:title="Contacto">

        <EditTextPreference
            app:key="Email"
            app:title="Email"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>