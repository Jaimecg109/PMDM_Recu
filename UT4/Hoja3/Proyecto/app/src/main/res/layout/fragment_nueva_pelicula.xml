<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FragmentNuevaPelicula">

    <ImageView
        android:id="@+id/imageViewPelicula"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:src="@tools:sample/avatars" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/pelicula"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/editTextTitulo"
            android:hint="Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="55dp">
            <ImageView
                android:src="@drawable/revision"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/editTextAnno"
                android:hint="AÃ±o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="110dp">
            <ImageView
                android:src="@drawable/ic_director"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/editTextDirector"
                android:hint="Director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="160dp">
            <ImageView
                android:src="@drawable/ic_puntuacion"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/editTextPuntuacion"
                android:hint="puntuacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="210dp">
            <ImageView
                android:src="@drawable/ic_imagen"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/editTextImagen"
                android:hint="Imagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="270dp">
            <EditText
                android:id="@+id/editTextSinopsis"
                android:hint="Sinopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <Button
            android:id="@+id/btnInsertar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_gravity="center_horizontal"
            android:text="insertar"
            />
    </androidx.cardview.widget.CardView>
</FrameLayout>